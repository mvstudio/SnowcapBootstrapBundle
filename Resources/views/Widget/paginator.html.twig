{% if paginator.pageCount > 1 %}
    <div class="pagination">
        <ul>
            <li{% if paginator.page == 1 %} class="disabled"{% endif %}><a href="?page=1">«</a></li>
            {% for i in paginator.range %}
            <li{% if paginator.page == i %} class="active"{% endif %}>
                <a href="?page={{ i }}">{{ i }}</a>
            </li>
            {% endfor %}
            <li{% if paginator.page == paginator.pageCount %} class="disabled"{% endif %}><a href="?page={{ paginator.pageCount }}">»</a></li>
      </ul>
    </div>
{% endif %}